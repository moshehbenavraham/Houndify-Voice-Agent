# Houndify API Configuration
# Get your credentials from https://www.houndify.com/dashboard
HOUNDIFY_CLIENT_ID=your_client_id_here
HOUNDIFY_CLIENT_KEY=your_client_key_here

# Server Configuration
PORT=3000
NODE_ENV=development

# CORS Configuration (comma-separated list of allowed origins)
# For development, you can use http://localhost:3000
# For production, specify your actual domain(s)
CORS_ORIGINS=http://localhost:3000

# Optional: Request Configuration
HOUNDIFY_REQUEST_TIMEOUT=10000
HOUNDIFY_VAD_TIMEOUT=2000

# Optional: Default Location (for location-based queries)
DEFAULT_LATITUDE=37.388309
DEFAULT_LONGITUDE=-121.973968